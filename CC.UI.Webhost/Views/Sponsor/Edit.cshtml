*@
<div class="title">edit sponsor | @Html.ActionLink("back", "Index")</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "Sponsor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.EventID)

    <div class="field-name">
        @Html.LabelFor(model => model.Name)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="field-name">
        @Html.LabelFor(model => model.Description)
    </div>
    <div class="editor-multiline-field">
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <div class="field-name">
        @Html.LabelFor(model => model.WebsiteUrl)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.WebsiteUrl)
        @Html.ValidationMessageFor(model => model.WebsiteUrl)
    </div>

    <div class="field-name">
        @Html.LabelFor(model => model.SponsorshipLevel)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.SponsorshipLevel, new SelectList(new List<string>() { "Diamond", "Platinum", "Gold", "Silver", "Bronze", "Contributor", "Lunch Sponsor", "Speaker Party  Sponsor", "Attendee Party Sponsor", "Bag Sponsor", "Breakfast Sponsor", "Coffee Sponsor"}))
        @Html.ValidationMessageFor(model => model.SponsorshipLevel)
    </div>

    <div class="field-name">
        @Html.LabelFor(model => model.Logo)
    </div>
    <div title="Upload Logo">
        <p><input type="file" id="Logo" name="Logo" size="23"/></p>
    </div>
    
    <br/>

    <div>
        <input type="submit" value="Save" class="action-button"/>
        <input type="button" value="Delete" class="action-button" onclick="location.href='@Url.Action("Delete", "Sponsor", new { id = Model.ID })'" />
    </div>

    <br/>
}