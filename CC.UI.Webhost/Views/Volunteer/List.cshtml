@model IEnumerable<CC.UI.Webhost.Models.VolunteerTask>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            EventId
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Capacity
        </th>
        <th>
            StartTime
        </th>
        <th>
            EndTime
        </th>
